<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.androidoptimizedemo">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".memoryOpt.NotStaticActivity"/>
        <activity android:name=".memoryOpt.AsyncTaskActivity"/>
        <activity android:name=".memoryOpt.SingleInstanceClass"/>
        <activity android:name=".memoryOpt.HandlerActivity"/>
        <activity android:name=".memoryOpt.ThreadActivity"/>
        <activity android:name=".memoryOpt.ResActivity"/>
        <activity android:name=".layoutOpt.IncludeActivity"/>
        <activity android:name=".layoutOpt.ConstaintLayoutActivity"/>
        <activity android:name=".layoutOpt.ImageOptActivity"/>
        <activity android:name=".memoryOpt.ListenerActivity"/>
    </application>

</manifest>